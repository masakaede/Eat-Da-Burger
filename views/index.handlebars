<div class="row justify-content-center">
    <h1>Eat-Da-Burger!</h1>
</div>

<div class="row justify-content-center">
    <div class="col-20">
        <h2>Wanted!</h2>

        <ol>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ol>
    </div>
    <div class="col-20">
        <h2>Devoured!</h2>
        <ol>
            {{#each burgers}}
            {{#if devoured}}
            {{> burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>
<div class="row justify-content-center">

    <h2>Add a Burger</h2>
</div>
<div class="row justify-content-center">

    <form class="create-form">

        <div class="form-group">
            <label for="burger_name">Burger Name:</label>
            <input type="text" id="burger_name" name="name">
        </div>

        <button class="submit" type="submit">Submit</button>
    </form>
</div>