<h1>Eat-Da-Burger!</h1>

<h2>Wanted!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" name="name">
    </div>

    <button type="submit">Submit</button>
</form>